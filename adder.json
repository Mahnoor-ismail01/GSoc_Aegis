
{
  "dut": {
    "name": "adder",
    "description": "8-bit adder module with reset",
    "author": "Unknown",
    "email": "unknown@example.com",
    "revision": "0.1",
    "date": "2025-08-17",
    "sim_time": 1000,
    "clock_period": 10,
    "reset_duration": 50,
    "protocol": {
      "name": "Generic",
      "baud_rate": "none",
      "data_bits": 8,
      "parity": "none",
      "stop_bits": 1,
      "interface": "none",
      "additional_settings": "none"
    },
    "transaction_types": [
      {
        "name": "add_operation",
        "description": "Transaction for 8-bit addition operation",
        "inputs": [
          {"name": "rstn", "width": 1, "type": "logic", "description": "Active-low reset input"},
          {"name": "a", "width": 8, "type": "rand logic", "description": "First 8-bit input operand"},
          {"name": "b", "width": 8, "type": "rand logic", "description": "Second 8-bit input operand"}
        ],
        "outputs": [
          {"name": "sum", "width": 8, "type": "logic", "description": "8-bit sum output"},
          {"name": "carry", "width": 1, "type": "logic", "description": "Carry-out output"}
        ],
        "constraints": [
          {"a": "inside {[0:255]}"},
          {"b": "inside {[0:255]}"}
        ],
        "additional_settings": "none"
      }
    ]
  },
  "test_cases": [
    {
      "name": "reset_test",
      "description": "Test reset functionality",
      "trans_type": "add_operation",
      "loops": 5,
      "constraints": ["rstn == 0"],
      "delay": 50,
      "expected_output": {"sum": 0, "carry": 0}
    },
    {
      "name": "addition_test",
      "description": "Test normal addition operation",
      "trans_type": "add_operation",
      "loops": 10,
      "constraints": ["rstn == 1", "a inside {[0:255]}", "b inside {[0:255]}"],
      "delay": 100,
      "expected_output": {"sum": "inside {[0:255]}", "carry": "inside {[0:1]}"}
    }
  ],
  "global_config": {
    "random_seed": 12345,
    "timeout": 5000,
    "error_injection": "none",
    "verbosity": "medium",
    "logging": "enabled",
    "additional_config": "none"
  }
}
